<Page x:Class="w.log_in"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:w"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="log_in">

    <Grid Background="Bisque">
        <Label Content="Log in" FontSize="45" FontWeight="Bold" Margin="325,65,325,310"/>
        <Label Content="Username :" Style="{StaticResource text}" Margin="80,185,560,225" Width="NaN"></Label>
        <Label Content="Password :" Style="{StaticResource text}" Margin="90,240,550,170" Width="NaN"></Label>
        <TextBox Name="user" Style="{StaticResource text3box}" Margin="240,195,210,225"/>
        <TextBox Name="pass" Style="{StaticResource text3box}" Margin="240,250,210,170"/>
        <Button Content="Log in" Style="{StaticResource bu}" Margin="480,300,220,110" Click="Button_Click"/>
        <Button Content="Sign up" Style="{StaticResource bu}" Margin="240,300,460,110" Click="Button_Click_1" />
        <Button Content="Forget password" Style="{StaticResource bu}" Width="NaN" Margin="318,370,275,40" Click="Button_Click_2" />


    </Grid>
</Page>
