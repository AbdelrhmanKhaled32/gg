<Page x:Class="w.forgetpass"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:w"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="forgetpass">
    <Grid Background="Bisque">
        <Label Content="Forget password" FontSize="45" FontWeight="Bold" Margin="215,65,220,310" Width="NaN"/>
        <Label Content="Username :" Style="{StaticResource text}" Margin="80,185,560,225" Width="NaN"></Label>
        <Label Content="New Password :" Style="{StaticResource text}" Margin="30,240,575,170" Width="NaN"></Label>
        <TextBox Name="user" Style="{StaticResource text3box}" Margin="240,195,210,225"/>
        <TextBox Name="pass" Style="{StaticResource text3box}" Margin="240,250,210,170"/>
        <Button Content="Submit" Style="{StaticResource bu}" Margin="350,300,350,110" Click="Button_Click"/>

    </Grid>
</Page>
